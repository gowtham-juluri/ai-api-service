<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>QueryAgentServlet</servlet-name>
        <servlet-class>com.api.ai.QueryAgentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StroreInDBServlet</servlet-name>
        <servlet-class>com.api.ai.StroreInDBServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StoreTrainDataServlet</servlet-name>
        <servlet-class>com.api.ai.StoreTrainDataServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QueryAgentServlet</servlet-name>
        <url-pattern>/query-agent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StroreInDBServlet</servlet-name>
        <url-pattern>/store-db</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StoreTrainDataServlet</servlet-name>
        <url-pattern>/store-train-data</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>log4j-config-location</param-name>
        <param-value>WEB-INF/log4j.properties</param-value>
    </context-param>
    <listener>
        <listener-class>com.api.ai.ContextListener</listener-class>
    </listener>
</web-app>
